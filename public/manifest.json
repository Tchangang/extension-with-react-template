{
    "manifest_version": 2,
    "name": "InboxSync",
    "description": "Sync your Linkedin messages with your CRM",
    "version": "0.1.1",
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Manage Linkedin message"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "permissions": [
        "storage"
    ]
}